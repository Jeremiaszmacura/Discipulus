{{> navigation}}

<link rel="stylesheet" href="/css/exams.css">


<div class="dashboard-body">
    <div class="dashboard-container">
        <p class="dashboard-title">All Exams - Management</p>
        <div class="dashboard-container-body">
            {{#if exams.length}}
                {{#each exams}}
                    <div class="dashboard-exam">
                        <a class="single" href="/exams/{{_id}}">
                            <h3>{{name}}</h3>
                            <p>time: {{time}}</p>
                            <p>description: {{description}}</p>
                        </a>
                    </div>
                {{/each}}
            {{/if}}
        </div>
    </div>
</div>
