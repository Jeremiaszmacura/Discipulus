{{> navigation}}

<link rel="stylesheet" href="/css/styles.css">
<link rel="stylesheet" href="/css/dashboard.css">


<div class="dashboard-body">
    <div class="dashboard-container">
        <p class="dashboard-title">User Details</p>
        <div class="dashboard-container-body">
            <p>Email:</p>
            <p>{{{userEmail}}}</p>
            {{#if isAdmin}}
                <br>
                <p>Role:</p>
                <p>Admin</p>
            {{else}}
                <br>
                <p>Role:</p>
                <p>User</p>
            {{/if}}
        </div>
    </div>
    <div class="dashboard-container">
        <p class="dashboard-title">Owned Exams</p>
        <div class="dashboard-container-body">
            {{#if userExams.length}}
                {{#each userExams}}
                    <div class="dashboard-exam">
                        <a class="single" href="/exams/{{_id}}">
                            <h3>{{name}}</h3>
                            <p>time: {{time}}</p>
                            <p>description: {{description}}</p>
                        </a>
                    </div>
                {{/each}}
            {{/if}}
        </div>
    </div>
</div>
